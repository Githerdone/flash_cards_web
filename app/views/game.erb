<h2>This is where you will play the game</h2>

<%= @current_card.question %>

  <form action="/play" method="POST">
    <input type="text" name="user_input" placeholder="your answer" required>
    <input type="hidden" name="card_id" value="<%= @current_card.id %>">
    <input type="submit" value="Guess!">
  </form>

<%= erb :_correct, :layout => false %>

<%= erb :_wrong, :layout => false %>